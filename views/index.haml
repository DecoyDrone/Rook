%h2 Welcome to Rook
%li
  %a(href="opportunity")Create
  %a(href="signup")Sign-Up
  %a(href="login")Login
  %a(href="logout")Logout
%table
  %thead
    %tr
      %th(colspan="3")Available Opportunities!
    %tr
      %th Title
      %th Skills
      %th Description
  %tbody
    - @opportunities.each do |opportunity|
      %tr
        %td= opportunity.title
        %td= opportunity.skills 
        %td= opportunity.description
        %td
          %form{ :action => "/bookings", :method => "POST"}
            - @opportunity = opportunity.id
            %input{:name => "opportunity", :type => "hidden", :value => @opportunity}
            %input{:type => "submit", :value => "Book it!", :class => "button"}
= will_paginate @opportunities

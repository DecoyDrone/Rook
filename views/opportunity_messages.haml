%h1 #{:title}
%li(id="links")
  %a(href="/")Home
%table
  %thead
    %tr(id="header")
      %th(colspan="3")Opportunity
    %tr(id="titles")
      %th Title
      %th Skills
      %th Description
  %tbody
    %tr
      %td= opportunity.title
      %td= opportunity.skills
      %td= opportunity.description
%table
  %thead
    %tr(id="header")
      %th(colspan="3")Messages
    %tr(id="titles")
      %th User
      %th Message
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.message
        %td
          %form{ :action => "/opportunity/book.#{opportunity.id}", :method => "POST"}
            - @user = user.id
            %input{:name => "user", :type => "hidden", :value => @user}
            %input{:type => "submit", :value => "Book them", :class => "button"}

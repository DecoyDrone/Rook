.row-fluid
  .span1
    %img{:src => "http://www.gravatar.com/avatar.php?gravatar_id=#{Digest::MD5::hexdigest(opportunity.user.email)}", :alt => 'Avatar', :class => 'avatar', :value => "#{opportunity.user_id}"}
  .span8
    %dl(class= 'dl-horizontal , dl-no-margin')
      .well.well-small
        %dt Author:
        %dd= opportunity.user.username
        %dt Skills:
        %dd= opportunity.skills.map(&:name).join(", ")
        %dt Description:
        %dd= opportunity.description

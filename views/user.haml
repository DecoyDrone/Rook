%h1 Hello, #{@current_username} 
%li(id="links")
  %a(href="opportunity")Create
  %a(href="/")Home
%table
  %thead
    %tr(id="header")
      %th(colspan="3")Authored Opportunities
    %tr(id="titles")
      %th Title
      %th Skills
      %th Description
  %tbody
    - @user_opportunities.each do |opportunity|
      %tr
        %td= opportunity.title
        %td= opportunity.skills
        %td= opportunity.description
        %td
          %a(href="/opportunity/edit.#{opportunity.id}")Edit
          %a(href="/opportunity/delete.#{opportunity.id}")Delete
          %a(href="/opportunity/messages.#{opportunity.id}")Messages
